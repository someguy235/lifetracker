<com.ems.lifetracker.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="wrap_content"
 android:layout_height="match_parent"
 android:orientation="vertical" > 
	<TextView
		android:id="@+id/track_list_increment_item_name"
     	android:layout_width="match_parent"
     	android:layout_height="0dp"
     	android:layout_weight="1"
     	android:paddingLeft="@dimen/track_horizontal_margin"
    	android:textColor="@color/white" 
     	android:textSize="32sp"/>
	<LinearLayout 
	    android:id="@+id/track_list_increment_item_buttons"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1" 
	    android:orientation="horizontal">
	    <ImageView
	    	android:id="@+id/track_list_increment_item_less"
	     	android:layout_height="match_parent"
	    	android:layout_width="0dp"
	    	android:layout_weight="1"
	    	android:src="@drawable/minus" 
	    	android:contentDescription="@string/track_list_increment_item_less"/>
	    <ImageView
	    	android:id="@+id/track_list_increment_item_more"
	     	android:layout_height="match_parent"
	    	android:layout_width="0dp"
	    	android:layout_weight="1"
	    	android:src="@drawable/plus" 
	    	android:contentDescription="@string/track_list_increment_item_more"/>
	</LinearLayout>
	<TextView
		android:id="@+id/track_list_increment_item_details"
     	android:layout_width="match_parent"
     	android:layout_height="0dp" 
     	android:layout_weight="1"
     	android:gravity="center_horizontal|center_vertical"
     	android:paddingLeft="@dimen/track_horizontal_margin"
    	android:textColor="@color/white" 
     	android:textSize="16sp"
     	android:text="@string/track_list_increment_item_details"/>

</com.ems.lifetracker.SquareLinearLayout>