<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/default_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/track_bottom_margin"
    android:paddingLeft="@dimen/track_horizontal_margin"
    android:paddingRight="@dimen/track_horizontal_margin"
    android:paddingTop="@dimen/track_top_margin"
    tools:context="com.ems.lifetracker.TrackActivity$PlaceholderFragment" >
   	<LinearLayout 
   	    android:id="@+id/track_list_datebar"
   	    android:layout_alignParentTop="true"
		android:paddingBottom="@dimen/track_bottom_margin"
    	android:paddingTop="@dimen/track_top_margin"
       	android:orientation="horizontal" 
	   	android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	   	android:weightSum="4">
	   	<ImageView
	    	android:id="@+id/track_list_date_down"
	     	android:gravity="center_horizontal"
	     	android:layout_height="match_parent"
	    	android:layout_width="0dp"
	    	android:layout_weight="1"
	    	android:src="@drawable/left" 
	    	android:contentDescription="@string/track_list_date_down"/>
	    <TextView
			android:id="@+id/track_list_date"
			android:gravity="center_horizontal"
	     	android:layout_width="0dp"
	     	android:layout_height="wrap_content"
	     	android:layout_weight="2"
	    	android:textColor="@color/white" 
	     	android:textSize="24sp"/>
	    <ImageView
	    	android:id="@+id/track_list_date_up"
	     	android:gravity="center_horizontal"
	     	android:layout_height="match_parent"
	    	android:layout_width="0dp"
	    	android:layout_weight="1"
	    	android:src="@drawable/right" 
	    	android:contentDescription="@string/track_list_date_up"/>
	</LinearLayout>
 	
    <GridView 
	    android:id="@+id/track_main_gridview"
	    android:layout_below="@+id/track_list_datebar"
	    android:layout_above="@+id/track_list_layout_buttons"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:numColumns="2"
	    android:verticalSpacing="4dp"
	    android:horizontalSpacing="4dp"
	    android:stretchMode="columnWidth"
	    android:gravity="center"
	/>
    
    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:id="@+id/track_list_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2" >
   	    <Button
	        style="?android:attr/buttonBarButtonStyle"
	        android:id="@+id/track_list_button_save"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
            android:layout_weight="2"
	        android:text="@string/track_list_button_save" />
	
	</LinearLayout>
</RelativeLayout>
